<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--  Name Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingTop="76dp">
                <TextView android:id="@+id/text_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="Height: "
                    android:layout_gravity="center"
                    android:textColor="#000000"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_wheel">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="#FFFFFF">
                    <com.aigestudio.wheelpicker.WheelPicker
                        android:id="@+id/main_wheel_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        aigestudio:wheel_atmospheric="true"
                        aigestudio:wheel_curved="true"
                        aigestudio:wheel_cyclic="true"
                        aigestudio:wheel_item_align="center"
                        aigestudio:wheel_item_text_color="#bd000000"
                        aigestudio:wheel_item_text_size="24sp"
                        aigestudio:wheel_selected_item_text_color="#000000"
                        android:layout_weight=".5"
                        android:visibility="gone"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="76dp">
                    <TextView android:id="@+id/text_hf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="5"
                        android:layout_gravity="center"
                        android:textColor="#000000"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="76dp">
                    <TextView android:id="@+id/text_feet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\'"
                        android:textSize="24sp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="-4dp"
                    android:backgroundTint="#FFFFFF">
                    <com.aigestudio.wheelpicker.WheelPicker
                        android:id="@+id/main_wheel_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        aigestudio:wheel_atmospheric="true"
                        aigestudio:wheel_curved="true"
                        aigestudio:wheel_cyclic="true"
                        aigestudio:wheel_item_align="center"
                        aigestudio:wheel_item_text_color="#bd000000"
                        aigestudio:wheel_item_text_size="24sp"
                        aigestudio:wheel_selected_item_text_color="#000000"
                        android:layout_weight=".5"
                        android:visibility="gone"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="76dp">
                    <TextView android:id="@+id/text_hi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="5"
                        android:layout_gravity="center"
                        android:textColor="#000000"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="76dp">
                    <TextView android:id="@+id/text_inches"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="&quot;"
                        android:textSize="24sp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/selectHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:padding="76dp"
                    android:text="OK"
                    android:textSize="18dp"
                    android:visibility="visible"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
        <!--  Name Label -->

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <CheckBox android:id="@+id/check_smoker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Do you currently smoke?"
                android:textSize="25sp"
                android:layout_marginTop="40dp"/>
        </android.support.design.widget.TextInputLayout>

        <!-- Signup Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/createUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Create Account"
            android:textSize="18dp"
            android:background="@android:color/transparent"/>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>